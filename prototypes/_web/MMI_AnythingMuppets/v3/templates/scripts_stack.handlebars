<style>
	#scriptContainer {
	    margin: auto;
	    width: 100%;
	    height: 85%;
	    top:15%;
	    display: -webkit-flex;
	    display: flex;
	    -webkit-flex-flow: column;
	    flex-flow: column;
	    -webkit-align-items: center;
	    align-items: center;
	    -webkit-justify-content: center;
	    justify-content: center;
	    perspective: 1000px;
	    position: absolute;
        overflow: hidden;
	}

	.script {
	  position: relative;
	  height: 28px;
	  overflow:hidden;
	  /*color:white;*/
	  padding:10px;
	  width:500px;
	  /*left:0px;*/
	  transition: top ease-in-out .5s, width ease-in-out .25s, transform ease-in-out .25s, height ease-in-out .5s, background-color ease-in-out .5s, box-shadow ease-in-out .5s;
	  box-shadow: 0px 0px 10px rgba(0,0,0,.5);
      transform: rotateX(-15deg) rotateY(0deg);
      background-color: white;
	}

	.scriptText {
	  background-color: lightgray;
	  color: black;
	  font-size: .5rem;
	  line-height: .75rem;
      overflow: hidden;
	  height: 85%;
	  /*padding: 20px;*/
	}

	.scriptTitle {
	  font-weight: bold;
	  font-size:20px;
	  line-height: 40px;
	  padding-bottom: 10px;
	}

	.note {
		background-color: palegoldenrod;
	    color: black;
	    font-size: .4rem;
	    line-height: 0.4rem;
	    padding: .5rem;
	    position: absolute;
	    margin: 10px;
	    box-shadow: 0px 0px 10px rgba(0,0,0,.3);
	}

	.note br {
		line-height:.1rem;
	}

	.scriptMore {
		bottom: 0px;
		width: 100%;
		margin: 0px;
		box-shadow: none;
		left:0px;
		text-align: center;
		background-color: rgba(255,255,255,.85);

		color: black;
	    font-size: .4rem;
	    line-height: 0.4rem;
	    padding: .5rem 0 .5rem 0;
	    position: absolute;
	    visibility: hidden;
	    font-weight: bold;
	    z-index: 101;
	}

	.scriptClick {
	  position: absolute;
	  left:0px;
	  top:0px;
	  width: 100%;
	  height: 100%;
	}

	#selected_character {
		visibility: hidden;
		display: none;
	}

	.scriptButtons {
		visibility: hidden;
	    position: absolute;
    	right: 0px;
	    top: 0px;
	    margin: 5px;
	}

	.scriptSelect {
		background-color:green;
		float: left;
		margin-right: 5px;
		padding:5px;
	}
</style>
<!-- <div class="title top">{{title}}</div> -->
<div id="prompt_container" class="top">
	<div id="info_prompt" class="prompt noselect">
		<div id="selected_character">
			<div id="">Build A</div>
			<div id="info_name"></div>
		</div>
		<div id="no_selected_character">
			<div id="">Select a Character</div>
		</div>
	</div>
	<div id="drawer_prompt" class="prompt noselect">
		<div>
			<div id="d_text"><strong>Open a Drawer</strong><br />to Start Building</div>
			<audio id="a_drawer" src="sound/v03.mp3" />
		</div>
	</div>
	<div id="spin_prompt" class="prompt noselect">
		<div>
			<div id="d_text"><strong>Spin the Puppet</strong><br />to Test on Camera</div>
			<audio id="a_spin" src="sound/v04.mp3" />
		</div>
	</div>
</div>
<audio src="sound/v02.mp3" autoplay />
<div id="container_internal">
    <div id="scriptContainer">
		{{#each scripts}}
			<div id="script_{{name_clean}}" class="script noselect" ><!--style="background-color:{{fill}}">-->
				<div class="scriptTitle" style="color:{{fill}}">
					<div style="">{{name}}</div>
					<div class="scriptButtons" id="scriptButtons_{{name_clean}}">X</div>
				</div>
				{{#if synopsis}}
				<div id="synopsis" class="note noselect">
					{{{synopsis}}}
				</div>
				{{/if}}
				<div id="text" class="scriptText noselect">
					<!-- {{{text}}} -->
					{{#if image}}
					<img src="{{image}}" />
					{{/if}}
				</div>
				{{#if more}}
				<div id="more_{{name_clean}}" class="scriptMore noselect" style="color:{{fill}}">
					&darr; More &darr;<br /><br /><br />
				</div>
				{{/if}}
				<div id="script_{{name_clean}}_click" class="scriptClick noselect"></div>
			</div>
	  	{{/each}}
	</div>
</div>